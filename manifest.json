{
    "manifest_version": 3,
    "name": "Meets+",
    "description": "Additional functionalities to Google Meet.",
    "version": "1.0",
    "action": {
        "default_title": "Meets+",
        "default_popup": "./html/popup.html"
    },
    "content_scripts": [
        {
            "matches": ["https://meet.google.com/*"],
            "js": ["./js/content.js"],
            "css" : ["./css/content.css"]
        }
    ],
    "web_accessible_resources": [
        {
        "resources": [
            "img/meets_plus_icon.png",
            "img/full_screen.png"
        ],
        "matches": [ "https://meet.google.com/*" ]
       }
    ]
}